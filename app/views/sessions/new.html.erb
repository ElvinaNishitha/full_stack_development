<div class="container">
	<div class="row">
	<div class="col-sm-5">
	</div>
	<div class="col-sm-6">
<br><h1>Log in</h1>

<%= form_for :event, url: new_event_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Log in" %></p>
<% end %>
</div>
</div>